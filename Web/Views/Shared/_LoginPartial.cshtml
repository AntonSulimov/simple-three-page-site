@using Microsoft.AspNetCore.Identity
@using Data.Entities

@inject SignInManager<User> SignInManager

<style scoped>
    #loginNavbar {
        margin-left: auto;
    }

    .img-profile {
        height: 2.5rem;
        width: 2.5rem;
        border-radius: 50%;
        border: 1px solid gray;
        padding: 5px;
    }
</style>

<ul class="navbar-nav" id="loginNavbar">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span>@User.Identity.Name</span>
                        <img class="img-profile" src="~/img/profile-no-img.png" />
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow" aria-labelledby="loginDropdown">
                        <a class="dropdown-item" asp-area="" asp-controller="Profiles" asp-action="Details">
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                            Мой профиль
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                            Выход
                        </a>
                    </div>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Login">Вход</a>
        </li>
    }
</ul>

<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logoutModalLabel">Готовы уходить?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                Нажмите кнопку "Выйти", если готовы завершить Вашу текущую сессию.<br />
            </div>
            <div class="modal-footer">
                <form method="post" asp-area="Identity" asp-controller="Account" asp-action="Logout">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Отмена</button>
                    <button class="btn btn-primary" type="submit">Выйти</button>
                </form>
            </div>
        </div>
    </div>
</div>